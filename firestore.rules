rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 1. User Profiles: 
    // - Everyone can read basic profile info (needed for member lists)
    // - Users can only write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Leads/Leagues
    match /leagues/{leagueId} {
      // Allow read if authenticated (could be stricter: allow read if user is member)
      allow read: if request.auth != null;
      
      // Allow create if authenticated
      allow create: if request.auth != null;

      // Allow update if owner (this is a simplified check, ideally verified via resource data)
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Subcollection: Members
      match /members/{memberId} {
        allow read: if request.auth != null;
        // Allow joining (create own member doc) or updating own doc (e.g. avatar)
        // Or if league owner updates points (handled by backend usually, but for Alpha client-side)
        allow write: if request.auth != null; 
      }

      // Subcollection: Bets
      match /bets/{betId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null; 
        allow update: if request.auth != null; // Needed for resolving bets (Owner) and placing wagers (Atomic update)

        // Subcollection: Wagers
        match /wagers/{wagerId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
          allow update: if false; // Wagers shouldn't change after placement
        }
      }
    }
  }
}
