rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 1. User Profiles: 
    // - Everyone can read basic profile info (needed for member lists)
    // - Users can only write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Leads/Leagues
    match /leagues/{leagueId} {
      // Allow read for anyone (including unauthenticated) so join links work
      // Users need to see league details before deciding to join/login
      allow read: if true;
      
      // Allow create if authenticated
      allow create: if request.auth != null;

      // Allow update if:
      // - Owner (can update any field)
      // - OR authenticated user updating ONLY memberCount (for joining league)
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.ownerId ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberCount']))
      );

      // Allow delete if owner
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Subcollection: Members
      match /members/{memberId} {
        allow read: if request.auth != null;
        // Allow joining (create own member doc) or updating own doc (e.g. avatar)
        // Or if league owner updates points (handled by backend usually, but for Alpha client-side)
        allow write: if request.auth != null; 
      }

      // Subcollection: Bets
      match /bets/{betId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null; 
        allow update: if request.auth != null; 
        // Allow delete if: bet creator OR league owner
        allow delete: if request.auth != null && (
          resource.data.creatorId == request.auth.uid ||
          get(/databases/$(database)/documents/leagues/$(leagueId)).data.ownerId == request.auth.uid
        );

        // Subcollection: Wagers
        match /wagers/{wagerId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
          allow update: if request.auth != null; // Allow updates for bet resolution (status changes to WON/LOST/PUSH)
          // Allow delete if: bet creator OR league owner (same as parent bet delete rule)
          allow delete: if request.auth != null && (
            get(/databases/$(database)/documents/leagues/$(leagueId)/bets/$(betId)).data.creatorId == request.auth.uid ||
            get(/databases/$(database)/documents/leagues/$(leagueId)).data.ownerId == request.auth.uid
          );
        }
      }
    }

    // Explicitly allow Collection Group queries for members
    match /{path=**}/members/{memberId} {
        allow read: if request.auth != null;
    }

    // Notifications Collection Group
    match /{path=**}/notifications/{notificationId} {
        // Read: Users can query their own notifications (requires userId field on doc)
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
        
        // Create: Allow auth users to create notifications (e.g. triggering events)
        allow create: if request.auth != null; 
        
        // Update/Delete: Users can manage their own notifications (mark read, delete)
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
